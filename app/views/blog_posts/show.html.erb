<div class="max-w-3xl mx-auto bg-white shadow-md rounded-lg p-6">
  <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= @blog_post.title %></h1>

  
  <div class="text-gray-700 leading-relaxed space-y-4 mb-6">
  <%= simple_format(@blog_post.body, {}, wrapper_tag: "p") %>
</div>



  <% if user_signed_in? %>
    <div class="flex space-x-4 mt-6">
      <%= link_to "Edit Blog", edit_blog_post_path(@blog_post),
            class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded shadow" %>
      <%= link_to "Back to Blogs", blog_posts_path,
            class: "bg-gray-200 hover:bg-gray-300 text-gray-800 px-4 py-2 rounded shadow" %>
    </div>
  <% else %>
    <%= link_to "Back to Blogs", blog_posts_path,
          class: "bg-gray-200 hover:bg-gray-300 text-gray-800 px-4 py-2 rounded shadow mt-6" %>
  <% end %>
</div>
